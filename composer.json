{
    "name": "ozner-omali/laravel-to-i18next-lang-parser",
    "description": "Parse Laravel language files into i18next-compatible JSON",
    "keywords": ["php", "skeleton", "package"],
    "license": "MIT",
    "authors": [
        { "name": "Lorenzo Wynberg", "email": "dev.wynberg@gmail.com" }
    ],
    "extra": {
        "laravel": {
            "branch-alias": {
                "dev-main": "1.x-dev"
            },
            "providers": [
                "OznerOmali\\LaravelToI18nextLangParser\\Providers\\LaravelToI18nextLangParserServiceProvider"
            ]
        }
    },
    "require": {
        "php": "^8.4.0",
        "ext-fileinfo": "*",
        "laravel/laravel": "^12.2"
    },
    "require-dev": {
        "larastan/larastan": "^3.6",
        "laravel/pint": "^1.22.1",
        "orchestra/testbench": "^10.4",
        "peckphp/peck": "^0.1.3",
        "pestphp/pest": "^4.0.0",
        "pestphp/pest-plugin-type-coverage": "^4.0.0",
        "phpstan/phpstan": "^2.1.16",
        "rector/rector": "^2.0.16",
        "symfony/var-dumper": "^7.2.6"
    },
    "autoload": {
        "psr-4": {
            "OznerOmali\\LaravelToI18nextLangParser\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "sort-packages": true,
        "preferred-install": "dist",
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "scripts": {
        "lint": "pint",
        "refactor": "rector",
        "test:type-coverage": "pest --type-coverage --exactly=100",
        "test:typos": "peck",
        "test:lint": "pint --test",
        "test:unit": "pest --coverage --exactly=100",
        "test:types": "phpstan",
        "test:refactor": "rector --dry-run",
        "test": [
            "@test:lint",
            "@test:type-coverage",
            "@test:typos",
            "@test:unit",
            "@test:types",
            "@test:refactor"
        ]
    }
}
